{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.great_eagle.move": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": ["idle_perch"],
          "transitions": [
            { "flying": "!query.is_on_ground" },
            { "attacking": "query.is_delayed_attacking" }
          ]
        },
        "flying": {
          "animations": ["fly_cycle"],
          "transitions": [
            { "default": "query.is_on_ground" },
            { "dive_bomb": "query.is_delayed_attacking" }
          ]
        },
        "attacking": {
          "animations": ["ground_attack"],
          "transitions": [
            { "default": "query.all_animations_finished" }
          ]
        },
        "dive_bomb": {
          "animations": ["air_attack"],
          "transitions": [
            { "flying": "query.all_animations_finished" }
          ]
        }
      }
    }
  }
}