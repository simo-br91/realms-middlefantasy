{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.uruk_hai_elite": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": ["idle_heavy_breathing"],
          "transitions": [
            { "moving": "query.modified_move_speed > 0.1" },
            { "attacking": "query.is_delayed_attacking" }
          ]
        },
        "moving": {
          "animations": ["march_aggressive"],
          "transitions": [
            { "default": "query.modified_move_speed <= 0.1" },
            { "attacking": "query.is_delayed_attacking" }
          ]
        },
        "attacking": {
          "animations": ["melee_smash"],
          "transitions": [
            { "default": "!query.is_delayed_attacking && query.modified_move_speed <= 0.1" },
            { "moving": "!query.is_delayed_attacking && query.modified_move_speed > 0.1" }
          ]
        }
      }
    }
  }
}