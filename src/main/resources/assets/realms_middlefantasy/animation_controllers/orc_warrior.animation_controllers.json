{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.orc_warrior.general": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": ["look_at_target", "idle_breathing"],
          "transitions": [
            { "walking": "query.modified_move_speed > 0.1" },
            { "attacking": "query.is_delayed_attacking" }
          ]
        },
        "walking": {
          "animations": ["walk", "look_at_target"],
          "transitions": [
            { "default": "query.modified_move_speed <= 0.1" },
            { "attacking": "query.is_delayed_attacking" }
          ]
        },
        "attacking": {
          "animations": ["melee_attack"],
          "transitions": [
            { "default": "!query.is_delayed_attacking" }
          ]
        }
      }
    }
  }
}