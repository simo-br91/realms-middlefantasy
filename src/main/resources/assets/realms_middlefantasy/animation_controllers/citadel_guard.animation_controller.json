{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.citadel_guard.general": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": ["idle"],
          "transitions": [
            { "walking": "query.ground_speed > 0.1" },
            { "attacking": "variable.attack_time > 0" },
            { "hurt": "query.health < query.previous_health" }
          ]
        },
        "walking": {
          "animations": ["walk"],
          "transitions": [
            { "default": "query.ground_speed <= 0.1" },
            { "attacking": "variable.attack_time > 0" },
            { "hurt": "query.health < query.previous_health" }
          ]
        },
        "attacking": {
          "animations": ["attack"],
          "transitions": [
            { "default": "variable.attack_time <= 0 && query.ground_speed <= 0.1" },
            { "walking": "variable.attack_time <= 0 && query.ground_speed > 0.1" }
          ]
        },
        "hurt": {
          "animations": ["hurt"],
          "transitions": [
            { "default": "query.anim_time > 0.5" }
          ]
        }
      }
    }
  }
}